</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">

    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" rel="home" href="#">NGC CNG</a>
    </div>

    <div class="collapse navbar-collapse">

        <ul class="nav navbar-nav">
            <li class="active"><a href="/homepage">Home</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Posts <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="/new-local-post">New Local Post</a></li>
                    <li><a href="/new-international-post">New International Post</a></li>
                    <li class="divider"></li>
                    <li><a href="/review-local-posts">Review Local Posts</a></li>
                    <li><a href="/review-international-posts">Review International Posts</a></li>
                </ul>
            </li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>
</div>


<div class="container">

    <div class="text-center">
        <h1>Review Local Posts</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date and <br> Time Posted</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Live</th>
                    <th>Posted by</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <% for (var i=0; i<posts.length; i++) { %>
            <form action='/edit-local-post' method="get">                
                <tr>
                    <td><%= posts[i].dateTimePosted %></td>
                    <td><%= posts[i].title %></td>
                    <td><%= posts[i].content %></td>
                    <td><%= posts[i].live %></td>
                    <td><%= posts[i].username %></td>
                    <td><input type="submit" value="Edit" class="btn btn-default navbar-btn"></td>
                    <input type="hidden" name="postid" value="<%= posts[i]._id %>">
                    <!--<td><button type="button" class="btn btn-default navbar-btn" id="edit" postid="<%= posts[i]._id %>">Edit</button></td>-->
                    <td><button type="button" class="btn btn-default navbar-btn">Delete</button></td>
                </tr>
            </form>
            <% } %>
        </table>
    </div>

</div><!-- /.container -->
<!-- script references -->
